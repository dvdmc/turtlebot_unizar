<launch>
    <arg name="map_frame" default="map" />
    <arg name="base_frame" default="base_footprint" />
    <arg name="odom_frame" default="odom" />

    <arg name="scan_topic" default="base_scan" />
    <arg name="odom_topic" default="odom" />
    <arg name="map_topic" default="map" />

    <arg name="map_path" default="$(find turtlebot_unizar_bringup)/maps/mapI3A" />    


    <!-- Launch Stage-->
    <include file="$(find turtlebot_unizar_bringup)/launch/stage/stage_single_robot.launch">
        <arg name="map_frame" value="$(arg map_frame)" />
        <arg name="base_frame" value="$(arg base_frame)" />
        <arg name="odom_frame" value="$(arg odom_frame)" />

        <arg name="laser_topic" value="$(arg scan_topic)" />
        <arg name="odom_topic" value="$(arg odom_topic)" />
        <arg name="map_topic" value="$(arg map_topic)" />

        <arg name="map_path" value="$(arg map_path)" />
    </include>

    <!-- Map server Node-->
    <node pkg="map_server" type="map_server" name="map_server" args="$(arg map_path).yaml" respawn="false" >
        <param name="frame_id" value="$(arg map_frame)" />
    </node>

    <!-- GMAPPING Node-->
    <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
        <param name="odom_frame"             value="$(arg odom_frame)"/>
        <param name="base_frame"             value="$(arg base_frame)"/>
        <param name="map_frame"           value="$(arg map_frame)"/>
        <rosparam command="load" file= "$(find turtlebot_unizar_bringup)/param/gmapping/gmapping_default_params.yaml" />
        <remap from="scan" to="$(arg scan_topic)"/>
        <remap from="map" to="$(arg map_topic)"/>
    </node>


</launch>
